<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginStart="10dp"
              android:layout_marginLeft="10dp"
              android:background="@color/fragment_background"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="30dp"
        android:id="@+id/ranking_view"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:gravity="center_horizontal"
        android:visibility="gone"
        android:background="@color/fragment_background"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rankingnumber"
            style="@style/list_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/ridernumber_layout_width"
        android:id="@+id/ridernumber_layout"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@color/light_gray"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ridernumber"
            style="@style/list_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:id="@+id/nationality"
        style="@style/list_text"
        android:layout_width="@dimen/nationality_width"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="0dp"
        android:id="@+id/rider_layout"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/fragment_background"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/first_name"
            style="@style/list_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/last_name"
            style="@style/list_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <CheckBox
        android:id="@+id/registered_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="10dp"
        android:layout_weight="0"
        android:visibility="gone"/>

    <CheckBox
        android:id="@+id/day_rider_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/list_checkbox_margin_left"
        android:layout_marginRight="@dimen/list_checkbox_margin_right"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="10dp"
        android:layout_weight="0"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/time1"
        style="@style/time_view"
        android:layout_width="@dimen/time_box_width"
        android:gravity="right"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/list_time_margin_left"
        android:layout_marginStart="@dimen/list_time_margin_left"
        android:layout_weight="0"
        android:background="@color/light_gray"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/time2"
        style="@style/time_view"
        android:gravity="right"
        android:layout_width="@dimen/time_box_width"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/list_time_margin_left"
        android:layout_marginStart="@dimen/list_time_margin_left"
        android:layout_weight="0"
        android:background="@color/light_gray"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/gender"
        style="@style/list_text"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/list_time_margin_right"
        android:layout_marginRight="@dimen/list_time_margin_right"/>

    <TextView
        android:id="@+id/edit"
        style="@style/list_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/list_edit_margin_left"
        android:layout_marginStart="@dimen/list_edit_margin_left"
        android:visibility="gone"
        android:text="@string/e"/>

</LinearLayout>